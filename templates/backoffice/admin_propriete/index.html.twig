{% extends "backoffice/base/base.html.twig" %}

{% block body %}
<div class="content-wrapper" style="min-height: 1761.5px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>
                        <font style="vertical-align: inherit;">
                            <font style="vertical-align: inherit;">Toutes les proprietes</font>
                        </font>
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{path('admin_propriete_new')}}" class="btn btn-primary btn-sm">Nouvelle
                                propriété</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Toutes les propriétés</h3>

                <div class="card-tools">
                    <div class="pagination pagination-sm float-right mt-1">
                        {% do proprietes.setPageRange(4) %}
                        {{ knp_pagination_render(proprietes, 'vitrine/base/include/pagination.html.twig') }}
                    </div>
                </div>
            </div>
            <div class="card-body p-0" style="display: block;">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Titre
                            </th>
                            <th style="width: 30%">
                                Description
                            </th>
                            <th>
                                prix
                            </th>
                            <th style="width: 8%" class="text-center">
                                vendu
                            </th>
                            <th style="width: 20%" class="text-center">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for propriete in proprietes %}
                        <tr>
                            <td>
                                #
                            </td>
                            <td>
                                <a>
                                    {{propriete.titre}}
                                </a>
                                <br>
                                <small>
                                    crée le : {{propriete.createdAt|date("d/m/Y")}}
                                </small>
                            </td>
                            <td>
                                {{propriete.Description | u.truncate(70,'...',false)}}
                            </td>
                            <td class="project_progress">
                                {{propriete.prixFormatter}} Fcfa
                            </td>
                            <td class="project-state">
                                {% if propriete.vendu == 1 %}
                                <span class="badge badge-success">Vendu</span>
                                {% elseif propriete.vendu == 0 %}
                                <span class="badge badge-warning">Non vendu</span>
                                {% endif %}
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="{{path('admin_propriete_show', {id: propriete.id})}}">
                                    <i class="fas fa-eye">
                                    </i>
                                    Voir
                                </a>
                                {% if propriete.vendu == 0 %}
                                <a class="btn btn-info btn-sm" href="{{path('admin_propriete_edit', {id: propriete.id})}}">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Editer
                                </a>
                                {% endif %}
                                <a class="btn btn-danger btn-sm" href="{{path('admin_propriete_delete',{id:propriete.id})}}">
                                    <i class="fas fa-trash">
                                    </i>
                                    Supp
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
</div>
{% endblock %}