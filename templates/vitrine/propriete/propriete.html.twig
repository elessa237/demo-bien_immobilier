{% extends "vitrine/base/base.html.twig" %}

{% block body %}
<div class="bg-light rounded">
    <div class="container pb-4 pt-4">
        <h4>Ajouter un filtre : </h4>
        {{form_start(form)}}
        <div class="form-group">
            <div class="row  mb-3">
                <div class="col-3">{{form_widget(form.prixMax)}}</div>
                <div class="col-3">{{form_widget(form.surfaceMax)}}</div>
                <div class="col-4">{{form_widget(form.options)}}</div>
                <div class="col-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i>
                        rechercher
                    </button>
                </div>
            </div>
        </div>
        {{form_end(form)}}
    </div>
</div>

<div class="container">
    <h1 class="h1">Tout nos biens</h1>
    <div class="row flex">
        {% for propriete in proprietes %}
            {% include "vitrine/base/include/_propriete.html.twig" %}
        {% endfor %}
    </div>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(proprietes, 'vitrine/base/include/pagination.html.twig') }}
    </div>
</div>
{% endblock %}